{
    "$schema": "https://raw.githubusercontent.com/platformio/platformio-core/develop/platformio/assets/schema/library.json",
    "name": "Roomba",
    "version": "1.3.0",
    "description": "Object-oriented library for controlling iRobot Roomba and Create robots via serial communication using the Open Interface (OI) protocol. Supports movement control, sensor reading, LED control, song playback, scripting, and sensor streaming.",
    "keywords": [
        "roomba",
        "irobot",
        "create",
        "robot",
        "vacuum",
        "serial",
        "oi",
        "open-interface"
    ],
    "authors": [
        {
            "name": "Mike McCauley",
            "email": "mikem@airspayce.com"
        },
        {
            "name": "orlin369",
            "url": "https://github.com/orlin369",
            "maintainer": true
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/orlin369/Roomba.git"
    },
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/orlin369/Roomba",
    "frameworks": [
        "arduino"
    ],
    "platforms": [
        "atmelavr",
        "atmelmegaavr",
        "atmelsam",
        "espressif8266",
        "espressif32"
    ],
    "headers": "Roomba.h",
    "examples": [
        "examples/RoombaTest1/RoombaTest1.ino",
        "examples/TestSuite/TestSuite.ino",
        "examples/RoombaRCRx/RoombaRCRx.ino",
        "examples/ESP32Example/ESP32Example.ino"
    ]
}
